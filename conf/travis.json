		"autotls": "never"
	},

	"mongo": {
		"url": "mongodb://localhost/erizo-mail"
	},

	"smtp": {
		"name": "localhost",
		"host": "localhost",
		"port": 8025,
		"secure": false,
		"ignoreTLS": false,
		"authMethod": "PLAIN",
