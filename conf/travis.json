			"url": "/dav/card.php/addressbooks/%LOGIN/default"
		},
		"protocol": "http",
		"host": "localhost",
		"port": 8080,
		"auth": {
			"method": "BASIC"
		}
	},

	"imap": {
		"host": "localhost",
		"port": 8143,
